# 基础风格继承自UE推荐的Microsoft风格
BasedOnStyle: Microsoft

# ========== 核心缩进与布局 ==========
BreakBeforeBraces: Allman          # 大括号必须换行（UE标志性风格）
IndentWidth: 4                     # 4空格缩进（UE强制要求）
UseTab: Never                      # 严格使用空格
TabWidth: 4                        # 兼容性设置
NamespaceIndentation: All

# ========== 函数与参数排版 ==========
AllowAllParametersOfDeclarationOnNextLine: false  # 参数必须换行
BinPackParameters: false           # 禁止参数挤在一行
BinPackArguments: false            # 函数调用参数不压缩
AllowShortFunctionsOnASingleLine: Empty  # 只有空函数允许单行

# ========== 类与访问控制 ==========
AccessModifierOffset: -4           # 访问修饰符缩进对齐
ConstructorInitializerIndentWidth: 8  # 构造初始化列表缩进（UE惯例）
BreakConstructorInitializers: AfterColon  # 初始化列表换行风格

# ========== 指针与引用对齐 ==========
PointerAlignment: Left             # 指针符号靠左 (T* Var)
ReferenceAlignment: Left           # 引用符号靠左 (T& Var)

# ========== 控制语句格式 ==========
AllowShortIfStatementsOnASingleLine: Never  # if必须带括号
AllowShortLoopsOnASingleLine: false         # 循环必须带括号
IndentCaseLabels: true             # case标签缩进
IndentWrappedFunctionNames: false  # 函数声明换行不缩进

# ========== UE特色处理 ==========
SpaceAfterTemplateKeyword: true    # 模板空格 (template ...>)
SpacesInAngles: false              # 禁止模板尖括号内空格 (vector<int>)
AlignAfterOpenBracket: AlwaysBreak # 与UE括号换行风格一致
AlignConsecutiveMacros: true       # 对齐常见宏 (如UCLASS()/USTRUCT())

# ========== 特殊场景配置 ==========
IncludeBlocks: Preserve            # 保持include顺序（UE使用特殊排序）
SortIncludes: false                # 禁用自动排序
ForEachMacros:                     # 处理UE的TArray迭代宏
  - ENUMERATE_RANGE
  - FOREACH_OBJECT
